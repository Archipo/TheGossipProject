<% if @gossip.errors.any? %>
<div class="alert alert-danger" role="alert">
<h3 class="alert-heading">Shit ! Errors in the way</h3>
<h4>Nous n'avons pas réussi à créer le potin :/</h4>
<ul>
    <% @gossip.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>

<div class="card create-potin">
  <div class="card-header">
    <p>Création</p>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
    <%= form_tag url_for(action: 'create'), method: "post" do %>
      <%= label_tag 'Title' %>
    <%= text_field_tag 'title', @gossip.title %>
    <br /> <br />

    <%= label_tag 'Content' %>
    <%= text_field_tag 'content', @gossip.content %>
    <br /> <br />

    <%= submit_tag "Create Gossip" %>

<% end %>
</blockquote>
</div>
</div>